{% extends 'base.html.twig' %}


{% block main %}
    {#        start banner noir#}
<div class="banner-menu container-fluid">
    <h5 class="h5-custom menu ">Menu</h5>
</div>
{#        end banner noir#}
<div class="nav nav-pills justify-content-center ftco-animate" id="v-pills-tab" role="tablist"
     aria-orientation="vertical">
    <a class="nav-link py-3 px-4 active" id="menus" data-toggle="pill" href="#menus" role="tab"
       aria-controls="v-pills-profile" aria-selected="false"><span class="flaticon-cutlery"></span>Menu</a>
    <a class="nav-link py-3 px-4" id="sandwich" data-toggle="pill" href="#sandwich" role="tab"
       aria-controls="v-pills-messages" aria-selected="false"><span class="flaticon-cheers"></span>Sandwich</a>
    <a class="nav-link py-3 px-4" id="frite" data-toggle="pill" href="#frite" role="tab"
       aria-controls="v-pills-messages" aria-selected="false"><span class="flaticon-cheers"></span>Frite</a>
    <a class="nav-link py-3 px-4" id="boisson" data-toggle="pill" href="#boisson" role="tab"
       aria-controls="v-pills-messages" aria-selected="false"><span class="flaticon-cheers"></span>Boisson</a>
    <a class="nav-link py-3 px-4  " id="dessert" data-toggle="pill" href="#dessert" role="tab"
       aria-controls="v-pills-home" aria-selected="true"><span class="menu"></span>Dessert</a>
</div>
{#    start menu-------------------------------------------------------------------------------------------------------------- bzh#}
<section class="section-banner">
    <div class="container  menus">
        <div class="row row-menu">
            {% for menu in menu %}
                <div class="card card-custom text-center col-lg-6 col-md-12" style="width: 18rem;">
                    <p class="typeAndPrice"> Prix:<br><em>{{ menu.prix }} €</em></p>
                    <p class="img-region">
                        {% if menu.region == 1 %}
                            <img src="img/logobzh.png" alt="lion">
                        {% elseif menu.region == 2 %}
                            <img src="img/logolion.png" alt="lion">
                        {% endif %}
                    </p>
                    <img src="{{ asset("uploads/" ~ menu.image) }}" class="card-img-top image-menu" alt="...">
                    <div class="card-body">
                        <h4 class="card-title text-align">{{ menu.nom }} </h4>
                        {{ menu.description }}<br>
                        <a class="btn btn-primary" role="button"  href="{{ path('menu.show', {id: menu.id , slug: menu.slug}) }}">Détails & quantité</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {#    end menu bzh#}
