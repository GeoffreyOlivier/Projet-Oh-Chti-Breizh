    <script>

        $(document).ready(function () {

            $('.sandwich').hide();
            $('.frite').hide();
            $('.boisson').hide();
            $('.dessert').hide();
            $('.menus').show();

            $("#menus").click(function () {
                $('.sandwich').hide();
