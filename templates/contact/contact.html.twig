                                            <option value="CE">CE</option>
                                            <option value="retour de mariage">Retour de mariage</option>
                                            <option value="Anniversaire">Anniversaire</option>
                                            <option value="Autre">Autre</option>
                                        </select>
                                    </div>
                                </div>

